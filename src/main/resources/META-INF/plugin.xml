<idea-plugin>
  <id>com.bkv.intellij-circleci-integration</id>
  <name>CirclCI integration</name>
  <version>1.0</version>
  <vendor email="g.heevel@bkvgroup.eu" url="http://www.bkvgroup.eu">BKV</vendor>

  <description><![CDATA[
      Manage CircleCI comfortably from within your favorite IDE.<br>
    ]]></description>

  <change-notes><![CDATA[
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable instance="com.bkv.intellij.circleci.ui.Settings"/>
    <toolWindow id="CircleCI Builds" secondary="true" icon="/circleci/circleci.png" anchor="right"
                factoryClass="com.bkv.intellij.circleci.ui.RecentBuildsToolWindowFactory"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
